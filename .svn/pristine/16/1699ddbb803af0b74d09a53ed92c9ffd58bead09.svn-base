<script>
    var dt = false;
    $(function () {

        var msg = "@ViewBag.Msg";
        if (msg != "") {
            layer.msg(msg, {time:2000});
        }
        var vsPage = 7;//可见页数
        var pagesCount = 10;//总页数
        var curPage = 1;//当前页
        var id = @ViewBag.PersonId;
        $("#pageSizeSelector").change(function () {
            $('#pagesSum').empty();
            $('#pagesSum').removeData("twbs-pagination");
            $('#pagesSum').unbind("page");
            GetSumPer(1, id, false);  
        });
        GetSumPer(1, id, false);
        function GetSumPer(curPage, id, flag) {
            var nickTime = $("#searchTime").val();
            var pageSize = $("#pageSizeSelector").val();
            $.ajax({
                url: "/Summary/GetSumPer",
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                data: "{'nickTime':'" + nickTime + "','curPage':'" + curPage + "','id':'" + id + "','pageSize':'"+pageSize+"'}",
                async: true,
                cache: false,
                type: "POST",
                success: function (data) {
                    //var pageSize = 1;
                    var obj = JSON.parse(data);    
                    if (obj.recordCount > pageSize) {
                        ShowPage(obj.recordCount, pageSize, "pagesSum", curPage, flag);
                    }
                    var html = '';

                    var index = (curPage - 1) * pageSize + 1;
                    for (var i = 0 ; i < obj.lists.length ; i++) {
                        var id = obj.lists[i].ID;
                        var time = obj.lists[i].Time.replace(/T/g, ' ').split('.')[0];
                        html += '<tr><td>' + obj.lists[i].ID + '</td><td title="'+obj.lists[i].Title+'">' + obj.lists[i].Title + '</td><td title="' + obj.lists[i].Progress + '">' + obj.lists[i].Progress + '</td><td title="' + obj.lists[i].Problem + '">' + obj.lists[i].Problem + '</td>';
                        if (obj.lists[i].Problem == "无")
                            html += '<td></td>';
                        else
                        {
                            if (obj.lists[i].IS_Solve == 0)
                                html += '<td>尚未解决</td>';
                            else
                                html += '<td>已解决</td>';
                        }
                        html += '<td title="' + obj.lists[i].Teacher_evaluation + '">' + obj.lists[i].Teacher_evaluation + '</td><td>' + time + '</td>';  
                    }
                    if (obj.lists.length == 0) {
                        $("#pagesSum").empty();
                        html = '<p>暂无相关总结</p>';
                    }
                    $("#btn_sum").on("click", function () {
                        //var id = $(this).attr("id");
                        openAddSum();
                    });
                    $("#sumItem").empty().html(html);
                    dt = false;
                    $("#search_btn").on("click", function () {
                        if(!dt)
                        {
                            $("#pagesSum").empty();
                            $("#pagesSum").removeData("twbs-pagination");
                            $("#pagesSum").unbind("page");
                            GetSumPer(1, @ViewBag.PersonId, false);
                        }
                        dt = true;
                    });
                },
                error: function (data) {
                    alert("出现未知错误,请联系管理员!");
                }
            });
        }


        function ShowPage(count, pageSize, id, curPage, flag) {
            pagesCount = Math.floor(count / pageSize) + (count % pageSize == 0 ? 0 : 1);
            vsPage = 7;
            vsPage = pagesCount > vsPage ? vsPage : pagesCount;
            $('#' + id).twbsPagination({
                totalPages: pagesCount,
                visiblePages: vsPage,
                startPage: curPage,
                version: '1.1',
                onPageClick: function (event, page) { //点击分页回调函数
                    $('#' + id).find(".page").removeClass("active");
                    $('#' + id).find(".page[data-page='" + page + "']").addClass("active");
                    if (flag != false || flag == undefined) {
                            GetSumPer(page, @ViewBag.PersonId, true);
                    }
                    else {
                        flag = true;
                    }
                }
            });
        }

    });
    function openAddSum() {
        var id =  new Number(@LoginBase.ID);
        //iframe层
        layer.open({
            type: 2,
            title: '添加总结',
            shadeClose: true,
            shade: 0.8,
            area: ['700px', '450px'],
            content: ['/Summary/AddSum?id='+ id +"&flag=false", 'no'] //iframe的url
        });
    }
</script>
<script src="~/Scripts/jquery.twbsPagination.js"></script>

