@using LABMANAGE.UntityCode;
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Bootstrap 3.3.6 -->
<link href="~/Content/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
<!-- Font Awesome -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.5.0/css/font-awesome.min.css">
<!-- DataTables -->
<link href="~/Content/plugins/datatables/dataTables.bootstrap.css" rel="stylesheet" />
<link href="~/Content/plugins/datatables/jquery.dataTables.min.css" rel="stylesheet" />
<link href="~/CSS/Equip.css" rel="stylesheet" />

<!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
<!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
<!--[if lt IE 9]>
<script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
<script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
<![endif]-->



<section class="content-header">
    <h2>设备详情</h2>
</section>
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header" style="border-bottom:1px solid #eee">
                    <div class="row">
                        <div class="col-sm-12">
                            <label>设备名</label>
                            <label><input type="search" class="form-control" name="nickName" id="searchNames" value="" style="border-radius: 5px;"></label>&nbsp;&nbsp;
                            <label><input type="button" value="查询" id="searchBtn" class="btn btn-primary"></label>&nbsp;&nbsp;
                    </div>
                </div>
                <div class="box-body">
                    <div class="row">
                        <div class="col-xs-12">
                            <table class="table table-striped Sumtable">
                                <thead>
                                    <tr>
                                        <th>序号</th>
                                        <th>设备名称</th>
                                        <th>设备数量</th>
                                        <th>申请时间</th>
                                        <th>状态</th>
                                    </tr>
                                </thead>
                                <tbody id="sumItems"></tbody>
                            </table>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="SumBtn">

                                @if (@LoginBase.RoleCode == "R003")
                                {
                                    <button class="btn btn-info" data-toggle="modal" data-target="#WrSummary" id="btn_Ask">设备申请</button>
                                }
                            </div>

                        </div>
                        <div class="col-sm-6 wirteSum">

                            <div>
                                <ul id="pagesSums"></ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <input type="text" value="@LoginBase.ID" style="display:none;" id="UserID" />
        <input type="text" value="@LoginBase.RoleCode" style="display:none;" id="roleCode" />
    </div>
</section>


<!-- 分页 -->
<script src="~/JS/Leave/jquery.twbsPagination.js"></script>
<!-- DataTables -->
<script src="~/Content/plugins/datatables/jquery.dataTables.min.js"></script>
<script src="~/Content/plugins/datatables/dataTables.bootstrap.min.js"></script>
<!-- Bootstrap 3.3.6 -->
<script src="~/Content/bootstrap/js/bootstrap.min.js"></script>
<!-- Page script -->
<script src="~/Content/layer/layer.js"></script>
<script src="~/JS/Equip/Equip.js"></script>


