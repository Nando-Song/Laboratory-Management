        [HttpPost]
        public ActionResult Person(SumBaseDto summary)
        {
            bool isSuccess = SumService.InsertSum(summary);
            if (isSuccess == true)
            {
                ViewBag.Msg = "添加成功!";
            }
            else
            {
                ViewBag.Msg = "添加失败!";
            }
            return RedirectPermanent("/Summary/Person?id="+summary.User_ID);
        }


