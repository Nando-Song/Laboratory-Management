        #region 判断当前用户是否签到
        public JsonResult Is_Sign(string text)
        {
            int UID = 1 ;
            try
            {
                UID = int.Parse(LoginBase.ID);

                bool IsSign = ISIS.Is_Sign_In(UID);

                if (IsSign)
                {
                    return Json("true", JsonRequestBehavior.AllowGet);
                }
                else
                {
                    return Json("false", JsonRequestBehavior.AllowGet);
                }
            }
            catch
            {
                return Json("false", JsonRequestBehavior.AllowGet); ;
            }
        }
        #endregion

